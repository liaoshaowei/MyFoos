<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    tools:showIn="@layout/activity_food_main_details">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape_main_detail_radio_group_bg">
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营养元素"
            style="@style/MainDetailText_ii"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/tvUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每100克"
            style="@style/MainDetailText_ii"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"
            style="@style/MainDetailText_ii"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热量"
            style="@style/MainDetailText_ii.detail"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/tvIngredientCalory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/MainDetailText_ii.detail"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvLightsCalory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/MainDetailText_ii.remark"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蛋白质"
            style="@style/MainDetailText_ii.detail"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/tvIngredientProtein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/MainDetailText_ii.detail"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvLightsProtein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/MainDetailText_ii.remark"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="脂肪"
            style="@style/MainDetailText_ii.detail"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/tvIngredientFat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/MainDetailText_ii.detail"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvLightsFat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/MainDetailText_ii.remark"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="碳水化合物"
            style="@style/MainDetailText_ii.detail"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/tvInCarbohydrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/MainDetailText_ii.detail"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvLightsCarbohydrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/MainDetailText_ii.remark"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="膳食纤维"
            style="@style/MainDetailText_ii.detail"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/tvInFiberDietary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/MainDetailText_ii.detail"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvLightsFiberDietary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/MainDetailText_ii.remark"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="更多营养元素"
        style="@style/MainDetailText_ii"
        android:padding="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GI值"
            style="@style/MainDetailText_ii.red"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/tvGIvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/MainDetailText_ii.red"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvGIgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/MainDetailText_ii.red"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GL值"
            style="@style/MainDetailText_ii.red"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/tvGLvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/MainDetailText_ii.red"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvGLgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/MainDetailText_ii.red"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>