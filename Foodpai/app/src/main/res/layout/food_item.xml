<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/grayV">

    <ImageView
        android:id="@+id/ivFoodImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/fail_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/tvFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="米饭"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/ivFoodImg"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tvFoodInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="17sp"
        android:textColor="@color/red"
        android:layout_toRightOf="@+id/ivFoodImg"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/tvFoodName"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="千卡/100克"
        android:textSize="17sp"
        android:layout_toRightOf="@+id/tvFoodInfo"
        android:layout_below="@+id/tvFoodName"
        android:layout_marginTop="5dp"
        />
</RelativeLayout>